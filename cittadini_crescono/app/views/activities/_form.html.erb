<%= form_for(@activity) do |f| %>
  <% if @activity.errors.any? %>

    <div id="error_explanation" class="error-card mdl-card">
      <div class="mdl-card__title">
        <h2 class="mdl-card__title-text">
          <%= pluralize(@activity.errors.count, "error") %> prohibited this activity from being saved:
        </h2>
      </div>
      <div class="mdl-card__supporting-text">
        <ul>
          <% @activity.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>

    </div>
  <% end %>

  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
    <%= f.text_field :title, :class => "mdl-textfield__input", :pattern => "\w+", :id => "title", :type => "text" %>
    <%= f.label :title, :class => "mdl-textfield__label", :for => "title"%>
    <%= f.label :title, :for => "title" do %>
      <span class="mdl-textfield__error">Please insert something</span>
    <% end %>
    <%#= f.label :title, "<span class='required'>Please insert something</span>", :class => "mdl-textfield__error", :for => "title"%>


  </div>
  <br/>


  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
    <%= f.text_area :description, :class => "mdl-textfield__input", :id => "description", :type => "text", :rows => "3"%>
    <%= f.label :description, :class => "mdl-textfield__label", :for => "description"%>
  </div>
  <br/>
  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
    <%= f.text_field :category, :class => "mdl-textfield__input", :id => "category" %>
    <%= f.label :category, :class => "mdl-textfield__label", :for => "category"%>
  </div>


    <%= f.submit :class => "mdl-button mdl-js-button mdl-button--accent" %>

<% end %>
